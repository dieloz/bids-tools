    print "createSidecarMEG", root, sub, ses
    sidecar = {
        'InstitutionName': 'n/a',
        'InstitutionAddress': 'n/a',
        'Manufacturer': 'n/a',
        'ManufacturersModelName': 'n/a',
        'TaskName': 'n/a',
        'TaskDescription': 'n/a',
